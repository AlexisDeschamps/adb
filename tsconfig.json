// tsconfig.json
{
  "compilerOptions": {
    "outDir": "./built",
    "target": "es6",
    "lib": ["es6", "dom", "dom.iterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jquery"],
  },
  "include": [
    "./frontend/*",
  ],
  "exclude": [
    "./frontend/external/**/*",
  ],
}
